<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopupWithFrame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Toolkit Popup does not work on Android if there is a Frame " LineBreakMode="WordWrap" />

            <Button
                x:Name="CounterBtn"
                Text="Klick Button to open a Popup" 
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="LoginBtn"
                Text="Klick Button to open Login (same Bug with ContentPage) " 
                Clicked="OnLoginBtnClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
